{% extends 'AppBundle:Layouts:layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/signin.css') }}">
{% endblock %}

{% block content %}
	{{ parent() }}
    <div class="container">
		<form action="{{ path('login_check') }}" method="post" class="form-signin">
			<h2 class="form-signin-heading">Loguearse</h2>
			
			

		    <label for="username" class="sr-only">{{ 'Username'|trans }}:</label>
		    <input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'Username'|trans }}" required autofocus />

		    <label for="password" class="sr-only">{{ 'Password'|trans }}:</label>
		    <input type="password" id="password" class="form-control" name="_password" placeholder="{{ 'Password'|trans }}" required />
		    

		    <button type="submit" class="btn btn-lg btn-primary btn-block">{{ 'Sign in'|trans }}</button>
		    
		    <input type="hidden" name="_target_path" value="/home" />
		</form>
    </div> <!-- /container -->
{% endblock %}